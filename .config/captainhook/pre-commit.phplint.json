{
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "{$ENV|value-of:VENDOR_BIN_DIR|default:vendor/bin/}phplint --configuration=.github/linters/.phplint.yml --ansi {$STAGED_FILES|of-type:php|separated-by: }",
                "config": {
                    "label": "Lint Files (with PHPLint)"
                }
            }
        ]
    }
}
